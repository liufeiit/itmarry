<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:background="#FFFFFF"
     android:minHeight="100dp"
     android:padding="20dp"
     >
      <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
            android:textSize="30sp"
              android:textColor="#000000"
             android:paddingLeft="20dp"
              android:paddingBottom="0dp"
              android:maxLines="3"
              android:ellipsize="end"
               android:paddingTop="3dp"
             android:gravity="top"
             android:textStyle="bold"
          android:id="@+id/video_topic"
             android:text="说话说话说话说话"
             />
        
           <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="26sp"
             android:gravity="center_horizontal"
             android:textColor="#000000"
              android:id="@+id/video_authorname"
              android:layout_below="@id/video_topic"
              android:paddingLeft="20dp"
              android:visibility="visible"
              android:paddingBottom="3dp"
               android:text="名字"
             />
             <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="22sp"
             android:gravity="center"
             android:textColor="#000000"
             android:background="#00FFFFFF"
               android:id="@+id/video_time"
              android:layout_alignBottom="@id/video_authorname"
              android:paddingLeft="10dp"
              android:layout_toRightOf="@id/video_authorname"
              android:paddingBottom="3dp"
               android:text="2013-08-10"
             />
             
              <ImageView 
            android:layout_width="18dp"
          	android:layout_height="wrap_content"
          	android:background="@drawable/photo_img_1"
          	android:layout_alignTop="@id/video_topic"
          	android:layout_alignBottom="@id/video_authorname"
          	android:id="@+id/video_desc_img"
          	android:layout_marginRight="10dp"
          	android:visibility="visible"
             /> 
             
     <TextView 
         android:layout_height="wrap_content"
         android:layout_width="fill_parent"
         android:id="@+id/video_subject"
         android:paddingLeft="10dp"
         android:paddingRight="10dp"
         android:minHeight="38dp"
         android:textSize="22sp"
         android:textColor="#666666"
         android:background="#FFFFFF"
         android:layout_below="@id/video_desc_img"
        />
       <ImageView
           android:layout_below="@id/video_subject"
           android:layout_height="200dp"
           android:layout_width="fill_parent"
           android:id="@+id/video_cutpic"
           android:layout_marginTop="10dp"
           android:layout_marginBottom="10dp"
           android:src="@drawable/logo_green"
           />
       <ImageButton
           android:layout_below="@id/video_subject"
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:layout_alignTop="@id/video_cutpic"
           android:layout_alignBottom="@id/video_cutpic"
           android:layout_alignLeft="@id/video_cutpic"
           android:layout_alignRight="@id/video_cutpic"
           android:id="@+id/video_play"
           android:layout_marginTop="10dp"
           android:layout_marginBottom="10dp"
           android:src="@drawable/button_grey_play"
           android:background="@null"
           android:scaleType="center"
           />
        <TextView
            android:layout_below="@id/video_cutpic"
             android:layout_width="fill_parent"
             android:layout_height="50dp"
             android:text="评论"
             android:textSize="25sp"
             android:textColor="#9CD14C"
             android:background="#FFFFFF"
             android:padding="10dp"
              android:layout_marginLeft="40dp"
              android:textStyle="bold"
             />
        
        
         </RelativeLayout>
   
