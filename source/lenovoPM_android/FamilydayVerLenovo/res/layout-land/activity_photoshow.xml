<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
     >
    	<android.support.v4.view.ViewPager
         android:layout_centerHorizontal="true"
         android:id="@+id/photoshowViewPager"
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:paddingBottom="0dp"
         android:background="#FFFFFF"
         />
    	<RelativeLayout 
        android:id="@+id/photoframe_menu_layout"
          android:layout_width="370dp"
          android:layout_height="70dp"
          android:layout_alignParentBottom="true"
          android:background="@drawable/lenovo_menu_bg"
          android:layout_centerHorizontal="true"
          android:gravity="center_vertical"
          android:visibility="visible"
          android:layout_marginLeft="0dp"
          android:layout_marginRight="0dp" 
          android:paddingBottom="5dp"
         >
          <TextView
          android:id="@+id/photoshow_back"
          android:layout_width="40dp"
          android:layout_height="51dp"
          android:drawableTop="@drawable/lenovo_back"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="20dp"
          android:layout_alignParentLeft="true"
           android:gravity="center_horizontal"
          android:textColor="#FFFFFF"
          android:textSize="18sp"
          android:text="返回"
          android:background="@null"
          />
         
          <TextView
          android:id="@+id/photoshow_comment"
          android:layout_width="40dp"
          android:layout_height="51dp"
          android:drawableTop="@drawable/lenovo_comment"
          android:layout_alignParentRight="true"
          android:layout_marginTop="10dp"
          android:layout_marginRight="20dp"
          android:textColor="#FFFFFF"
          android:textSize="18sp"
          android:text="评论"
          android:background="@null"
          android:gravity="center_horizontal"
          />
          <TextView
          android:id="@+id/photoshow_comment_event"
          android:layout_width="40dp"
          android:layout_height="51dp"
          android:drawableTop="@drawable/join_bg"
           android:layout_alignParentRight="true"
          android:layout_marginTop="10dp"
          android:layout_marginRight="20dp"
          android:text="参加"
          android:gravity="center_horizontal"
          android:textColor="#FFFFFF"
          android:textSize="18sp"
          android:background="@null"
          android:visibility="invisible"
          />
          
          <TextView
          android:id="@+id/photoshow_full"
          android:layout_width="40dp"
          android:layout_height="51dp"
          android:drawableTop="@drawable/full"
          android:layout_toLeftOf="@id/photoshow_comment"
           android:layout_marginTop="10dp"
          android:layout_marginRight="30dp"
             android:textColor="#FFFFFF"
          android:textSize="18sp"
          android:text="全屏"
          android:background="@null"
          android:gravity="center_horizontal"
          />
          
          <TextView
          android:id="@+id/photoshow_heart"
          android:layout_width="40dp"
          android:layout_height="51dp"
          android:drawableTop="@drawable/lenovo_heart"
          android:layout_toLeftOf="@id/photoshow_full"
           android:layout_marginTop="10dp"
          android:layout_marginRight="30dp"
             android:textColor="#FFFFFF"
          android:textSize="18sp"
          android:text="喜欢"
          android:background="@null"
          android:gravity="center_horizontal"
          />
      
          
      <TextView
          android:id="@+id/photoshow_reblog"
          android:layout_width="40dp"
          android:layout_height="51dp"
          android:drawableTop="@drawable/lenovo_reblog"
           android:visibility="visible"
             android:layout_toLeftOf="@id/photoshow_heart"
            android:layout_marginTop="10dp"
          android:layout_marginRight="30dp"
           android:textColor="#FFFFFF"
          android:textSize="18sp"
          android:text="转发"
          android:background="@null"
          android:gravity="center_horizontal"
          />
      
      </RelativeLayout>
         <!--  <ListView 
    	     android:layout_below="@id/photoshow_top"
    	     android:layout_above="@id/photoshow_bottom"
    	     android:layout_width="fill_parent"
    	     android:layout_height="wrap_content"
    	     android:id="@+id/photoshow_listview"
    	     android:minHeight="50dp"
    	     android:background="#666666"
    	     android:divider="@null"
    	     android:dividerHeight="4dp"
    	     ></ListView>
    	      --> 
            
</RelativeLayout>