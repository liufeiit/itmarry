<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="@android:style/Theme.Light" />
    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transp</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <style name="DamiTheme.AlertDialog" parent="@android:style/Theme.Dialog">
        <item name="android:textAppearanceMedium">@style/TextAppearance.Medium</item>
        <item name="android:buttonStyle">@style/DamiButton</item>
        <item name="android:windowBackground">@color/transp</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:alertDialogStyle">@style/AlertDialog</item>
        <item name="android:textColor">#ff000000</item>
    </style>
    <style name="AlertDialog">
        <item name="android:fullDark">@drawable/dialog_bg_nt</item>
        <item name="android:topDark">@drawable/dialog_bg_top</item>
        <item name="android:centerDark">@drawable/dialog_bg_center</item>
        <item name="android:bottomDark">@drawable/dialog_bg_bottom</item>
        <item name="android:fullBright">@drawable/dialog_bg_nt</item>
        <item name="android:topBright">@drawable/dialog_bg_top</item>
        <item name="android:centerBright">@drawable/dialog_bg_center</item>
        <item name="android:bottomBright">@drawable/dialog_bg_bottom</item>
        <item name="android:bottomMedium">@drawable/dialog_bg_bottom</item>
        <item name="android:centerMedium">@drawable/dialog_bg_center</item>
    </style>
    <style name="DamiButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/dialog_btn_selector</item>
    </style>
    <style name="TextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">14.0sp</item>
    </style>
    <style name="TextAppearance.Medium" parent="@style/TextAppearance">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ff000000</item>
    </style>
    <style name="DamiProgressBar" parent="@android:style/Widget.ProgressBar">
        <item name="android:maxWidth">24.0dip</item>
        <item name="android:maxHeight">24.0dip</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:minWidth">24.0dip</item>
        <item name="android:minHeight">24.0dip</item>
    </style>
    <style name="large_text">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">@color/first_text_color</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="mid_text">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/first_text_color</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="small_text">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/second_text_color</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="set_large_text">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/first_text_color</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="set_small_text">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/second_text_color</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="label_text" parent="@style/small_text">
        <item name="android:background">#ff000000</item>
    </style>
    <style name="tab_item_text_style">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/tab_color_selector</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="tab_item_style" parent="@style/tab_item_text_style">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:button">@null</item>
    </style>
    <style name="move_item_style" parent="@style/tab_item_style">
        <item name="android:textColor">@color/move_item_color_selector</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="activityTheme" parent="@android:style/Theme.Light">
        <item name="android:colorForeground">@color/backgroundcolor</item>
        <item name="android:colorBackground">@color/backgroundcolor</item>
        <item name="android:windowBackground">@color/backgroundcolor</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="button_style">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:background">@drawable/btn_selector</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>
