<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    >
  
    <ImageView
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:src="@drawable/tutorial_dialog_stiqer"
        android:layout_marginLeft="30dp"
        />
     
    <TextView
        android:layout_width="270dp"
        android:layout_height="115dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:id="@+id/stiqer_text"
        android:background="@drawable/tutorial_dialog_top"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        />
    
     <TextView
        android:layout_width="280dp"
        android:layout_height="185dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:paddingLeft="10dp"
        android:paddingTop="6dp"
        android:id="@+id/egg_text"
        android:background="@drawable/tutorial_dialog_bottom"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        />
     
     <ImageView
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:src="@drawable/tutorial_dialog_egg"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        />
     
     <Button
         android:layout_width="120dp"
         android:layout_height="45dp"
         android:text="Done"
         android:textSize="18dp"
         android:textColor="#FFABABAC"
         android:background="@drawable/white_corner"
         android:layout_gravity="center"
         android:layout_marginTop="30dp"
         android:id="@+id/btn_done"
         />
</LinearLayout>