<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"
    android:gravity="center"
    android:orientation="vertical" >

   <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stiqers Earned!"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:textSize="22sp"
        android:textColor="@color/subhead"
    />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_stiqer"
        />
    
    <TextView
        android:id="@+id/stiqer_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-30dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="30dp"
        android:textColor="@color/white"
    />
    
     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eggs Earned!"
        android:layout_marginBottom="10dp"
        android:textSize="22sp"
        android:textColor="@color/subhead"
    />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_egg"
        />
    <TextView
        android:id="@+id/egg_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-32dp"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >
       <Button
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:background="@color/white"
          android:text="OK"
          
          android:id="@+id/btn_scan_ok"
       />
    
       <Button
          android:layout_width="0dp"
          android:layout_height="50dp"
          android:background="@color/white"
          android:id="@+id/btn_scan_share"
        />

     </LinearLayout>
   
</LinearLayout>