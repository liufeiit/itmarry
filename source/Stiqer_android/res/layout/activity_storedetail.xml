<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="fill_parent"  
    android:layout_height="fill_parent" 
    android:background="@color/bg_feed" 
    android:orientation="vertical"
    >
     <RelativeLayout  
       android:layout_width="match_parent"  
       android:layout_height="49dp"
       android:background="@color/white"  
       android:gravity="center_vertical" >  

       <Button  
          android:id="@+id/sd_back_btn"  
          android:layout_width="55dp"
            android:layout_height="41dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp"
          android:background="@drawable/camera_back_btn"
        />
        <TextView
            android:id="@+id/sd_title"  
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"  
            android:gravity="center"  
            android:textColor="@color/green"
            android:textSize="26sp"
         />
        <Button  
            android:id="@+id/sd_btn_scan"  
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/icon_scan"
          />
     </RelativeLayout>
     <View
        android:layout_width="fill_parent"  
        android:layout_height="1dp"
        android:background="@drawable/top_bar_line"
     />
     
<ScrollView
     android:layout_width="fill_parent"  
     android:layout_height="fill_parent" 
   >
 
 <LinearLayout  
    android:layout_width="fill_parent"  
    android:layout_height="wrap_content"  
    android:orientation="vertical" >  
    
    <ProgressBar
      android:layout_width="wrap_content"  
      android:layout_height="wrap_content"
      android:layout_marginTop="100dp"
      android:layout_gravity="center"
      android:id="@+id/progressbar"
     />

   <LinearLayout  
       android:layout_width="fill_parent"  
       android:layout_height="wrap_content"  
       android:gravity="center_horizontal"
       android:orientation="vertical" 
       android:id="@+id/connect_wrap"
       android:visibility="gone"
      >  
       <!-- 大顶部 -->
       <RelativeLayout
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
       >
       <ImageView
           android:layout_width="fill_parent"
           android:layout_height="60dp"
           android:background="@drawable/bg_topbar_slive"
         />
           
       <!-- Store Detail -->
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@drawable/panel_corners"
           android:layout_marginTop="38dp"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:orientation="vertical"
           android:paddingTop="10dp"
           android:id="@+id/big_wrap"
          >
          
        <RelativeLayout
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           >
           
           <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/store_des_wrap"
              android:orientation="horizontal"
              android:layout_marginTop="22dp"
              android:layout_marginLeft="82dp"
              >
               
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/sd_dot"
                   android:id="@+id/des_first_dot"
                   android:visibility="gone"
                  />
                <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="-3dp"
                   android:layout_marginLeft="3dp"
                   android:id="@+id/des_first_text"
                   android:textSize="12sp"
                  />
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/sd_dot"
                   android:layout_marginLeft="3dp"
                   android:id="@+id/des_second_dot"
                   android:visibility="gone"
                  />
                <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="12sp"
                   android:layout_marginTop="-3dp"
                   android:layout_marginLeft="3dp"
                   android:id="@+id/des_second_text"
                  />
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/sd_dot"
                   android:layout_marginLeft="3dp"
                   android:id="@+id/des_third_dot"
                   android:visibility="gone"
                  />
                <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="12sp"
                   android:layout_marginTop="-3dp"
                   android:layout_marginLeft="3dp"
                   android:id="@+id/des_third_text"
                  />
           </LinearLayout>
           
       </RelativeLayout>  
       
       <View
           android:layout_width="match_parent"
           android:layout_height="2dp"
           android:layout_marginTop="6dp"
           android:background="#FFE2B75B"
           /> 
           
       <LinearLayout
           android:layout_marginTop="6dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingLeft="10dp"
           android:paddingRight="10dp"
           android:orientation="vertical"
           > 
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Top Photos"
           android:textColor="@color/black"
           android:textSize="14sp"
        /> 
        <Gallery
           android:id="@+id/sd_photo_gallery"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="5dp"
           android:spacing="5dp"
         />
         
        <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Top Customers"
           android:textColor="@color/black"
           android:textSize="14sp"
           android:layout_marginTop="10dp"
        /> 
        
        <Gallery
           android:id="@+id/sd_customer_gallery"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="5dp"
           android:spacing="5dp"
         />
         
         <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Description"
           android:textColor="@color/black"
           android:textSize="14sp"
           android:layout_marginTop="10dp"
           android:id="@+id/store_des_title"
           android:visibility="gone"
        /> 
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:id="@+id/store_des_con"
            />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="See More"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:id="@+id/btn_more"
         />
        </LinearLayout>
      </LinearLayout>
      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:src="@drawable/panel_bottom_bg" 
          android:layout_below="@id/big_wrap"
       />
      <ImageView
           android:layout_width="70dp"
           android:layout_height="70dp"
           android:layout_alignParentLeft="true"
           android:id="@+id/store_image"
           android:layout_marginLeft="18dp"
           android:layout_marginTop="8dp"
       />
      
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_toRightOf="@id/store_image"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:id="@+id/level_wrap"
           >
          <ImageView
              android:layout_width="35dp"
              android:layout_height="35dp"
              android:id="@+id/store_level_icon"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/store_level_name"
              android:textSize="12sp"
              android:textColor="#FF404040"
           />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_toRightOf="@id/level_wrap"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="15dp"
            android:id="@+id/next_level_wrap"
           >
          <ImageView
              android:layout_width="35dp"
              android:layout_height="35dp"
              android:id="@+id/next_class_icon"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/next_class_text"
              android:textSize="12sp"
              android:textColor="#FF404040"
           />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_toRightOf="@id/next_level_wrap"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="15dp"
            android:id="@+id/stiqer_num_wrap"
           >
          <ImageView
              android:layout_width="35dp"
              android:layout_height="35dp"
              android:id="@+id/stiqer_num_icon"
              android:src="@drawable/ic_stiqer_feed"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/stiqer_num_text"
              android:textSize="12sp"
              android:textColor="#FF404040"
           />
        </LinearLayout>
        
      </RelativeLayout>
      
      <!-- Store detail end -->
      
      <!-- Button Start -->
      <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_corner"
            android:orientation="horizontal"
           >
             <LinearLayout
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:clickable="true"
                 android:focusable="true"
                 android:gravity="center"
                 android:id="@+id/enter_like_btn"
                 android:layout_weight="1"
               >
              <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="14sp"
                   android:id="@+id/like_num"
                   android:layout_margin="3dp"
               />
               <ImageView
                 android:layout_width="25dp"
                 android:layout_height="25dp"
                 android:src="@drawable/like_btn_press"
                 android:layout_marginBottom="6dp"
               />
               
              </LinearLayout>   
               <View
                 android:layout_width="1dp"
                 android:layout_height="match_parent" 
                 android:background="#FFD8D9DB" 
                />
              <LinearLayout
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:clickable="true"
                 android:focusable="true"
                 android:gravity="center"
                 android:id="@+id/enter_comment_btn"
                 android:layout_weight="1"
               >
                 <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="14sp"
                   android:id="@+id/comment_num"
                   android:layout_margin="3dp"
                />
                <ImageView
                   android:layout_width="25dp"
                   android:layout_height="25dp"
                   android:src="@drawable/comment_btn_press"       
                   android:layout_marginBottom="6dp"           
                />
             </LinearLayout>
             
             <View
                 android:layout_width="1dp"
                 android:layout_height="match_parent" 
                 android:background="#FFD8D9DB" 
              />
              
              <LinearLayout
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:clickable="true"
                 android:focusable="true"
                 android:id="@+id/enter_photo_btn"
                 android:layout_weight="1"
                 android:gravity="center"
               >
                   <TextView
                      android:text="Photo-Checkin"
                      android:textSize="14sp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_margin="3dp"
                     />
                   <ImageView
                      android:src="@drawable/camera_add"
                      android:layout_width="25dp"
                      android:layout_height="25dp"
                      android:layout_marginBottom="6dp"
                    />
            </LinearLayout>
      </LinearLayout> 
      <!-- Button end -->
      <!-- missions -->
      
       <TextView
           style="@style/BlockTitle"
           android:text="Missions"
           android:layout_marginTop="10dp"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
        />
           
        <View
           android:layout_width="fill_parent"
           android:layout_height="1dp"
           android:background="@color/block_header_underline"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
        />
   
       <com.hongkong.stiqer.widget.ExpandableHeightListView
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:id="@+id/store_mission_listview"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:scrollbars="none"
           android:dividerHeight="5dp"
          />      
          
      </LinearLayout>
   
   </LinearLayout>
</ScrollView>
</LinearLayout>
