<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/bg_feed"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
     <RelativeLayout
        android:id="@+id/header"  
        android:layout_width="match_parent"  
        android:layout_height="49dp"
        android:background="@color/white"  
        android:gravity="center_vertical" >  
  
        <Button  
            android:id="@+id/ps_back_btn"  
            android:layout_width="55dp"
            android:layout_height="41dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/camera_back_btn"
         />  
    </RelativeLayout>
    <View
        android:layout_width="fill_parent"  
        android:layout_height="1dp"
        android:background="@drawable/top_bar_line"
     />
    
    <ProgressBar
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/ps_progressbar"
        android:layout_gravity="center"
      />
    
   <LinearLayout
       android:layout_width="match_parent"  
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:id="@+id/con_wrap"
       android:visibility="gone"
      >
    <LinearLayout
         android:layout_width="match_parent"  
         android:layout_height="wrap_content"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:layout_marginTop="15dp"
         android:background="@drawable/white_corner"
         android:orientation="horizontal"
         android:visibility="gone"
        >
        <ImageView
             android:layout_width="60dp"  
             android:layout_height="60dp"
             android:layout_margin="10dp"
             android:id="@+id/sp_avatar_image"
        />
         <TextView
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content" 
            android:text="Edit profile picture"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textSize="14sp"
            android:textColor="@color/black"
         />
    </LinearLayout>
    
    <LinearLayout
         android:layout_width="match_parent"  
         android:layout_height="wrap_content"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:layout_marginTop="15dp"
         android:background="@drawable/white_corner"
         android:orientation="vertical"
        >
      <TextView
         android:layout_width="wrap_content"  
         android:layout_height="wrap_content" 
         android:text="Basic information"
         android:layout_marginLeft="10dp"
         android:layout_marginTop="8dp"
         android:layout_marginBottom="10dp"
         android:textSize="16sp"
         android:textColor="@color/black"
        />
      
      <View
        android:layout_width="fill_parent"  
        android:layout_height="1dp"
        android:background="#FFEED7A4"
       />
       <LinearLayout
           android:layout_width="match_parent"  
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:paddingTop="10dp"
           android:paddingBottom="5dp"
           >
           <TextView
               android:layout_width="wrap_content"  
               android:layout_height="wrap_content"
               android:text="Name"
               android:layout_marginLeft="10dp"
               android:textSize="14sp"
               android:textColor="@color/black"
            />
           <EditText
               android:layout_width="wrap_content"  
               android:layout_height="wrap_content"
               android:layout_marginLeft="10dp"
               android:id="@+id/ps_name"
               android:textSize="14sp"
               android:background="@color/white"
               android:maxLines="1"
            />
       </LinearLayout>
       
       <LinearLayout
           android:layout_width="match_parent"  
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:paddingTop="5dp"
           android:paddingBottom="5dp"
           >
           <TextView
               android:layout_width="wrap_content"  
               android:layout_height="wrap_content"
               android:text="Birthday"
               android:layout_marginLeft="10dp"
               android:textSize="14sp"
               android:textColor="@color/black"
            />
           <Spinner  
            android:id="@+id/sp_reg_day"  
            android:layout_marginLeft="10dp"
            android:layout_width="65dp"  
            android:layout_height="wrap_content"
            android:background="@drawable/profile_spinner_bg"
          />  
          
          <Spinner  
            android:id="@+id/sp_reg_month"  
            android:layout_marginLeft="10dp"
            android:layout_width="65dp" 
            android:layout_height="wrap_content"  
            android:background="@drawable/profile_spinner_bg"
          /> 
          <Spinner  
            android:id="@+id/sp_reg_year"  
            android:layout_marginLeft="10dp"
            android:layout_width="65dp"
            android:layout_height="wrap_content"  
            android:background="@drawable/profile_spinner_bg"
          /> 
       </LinearLayout>
       
       <LinearLayout
           android:layout_width="match_parent"  
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:paddingTop="5dp"
           android:paddingBottom="5dp"
           >
           <TextView
               android:layout_width="wrap_content"  
               android:layout_height="wrap_content"
               android:text="Gender"
               android:layout_marginLeft="10dp"
               android:textSize="14sp"
               android:textColor="@color/black"
            />
            <Spinner  
               android:id="@+id/sp_sex_spinner"  
               android:layout_width="65dp" 
               android:layout_marginLeft="18dp"
               android:layout_height="wrap_content"  
               android:background="@drawable/profile_spinner_bg"
             /> 
        </LinearLayout>
           
       <LinearLayout
           android:layout_width="match_parent"  
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:paddingTop="5dp"
           android:paddingBottom="15dp"
           >
           <TextView
               android:layout_width="wrap_content"  
               android:layout_height="wrap_content"
               android:text="Username"
               android:layout_marginLeft="10dp"
               android:textSize="14sp"
               android:textColor="@color/black"
            />
           <EditText
               android:layout_width="wrap_content"  
               android:layout_height="wrap_content"
               android:layout_marginLeft="10dp"
               android:id="@+id/ps_username"
               android:textSize="14sp"
               android:maxLines="1"
               android:background="@color/white"
            />
           
       </LinearLayout>
       
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"  
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        > 
    <Button
        android:layout_width="75dp"  
        android:layout_height="35dp"
        android:text="Save" 
        android:background="@drawable/green_corner"
        android:id="@+id/sp_post_btn"
        android:layout_alignParentRight="true"  
        android:layout_marginRight="95dp"   
        />
    <Button
        android:layout_width="75dp"  
        android:layout_height="35dp"
        android:text="Cancel" 
        android:id="@+id/sp_cancel_btn"
        android:background="@drawable/white_corner"
        android:layout_marginRight="10dp"
        android:layout_gravity="right"    
        android:layout_alignParentRight="true"  
        />
    </RelativeLayout>
  </LinearLayout>
</LinearLayout>
