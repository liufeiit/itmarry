<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"  
    android:layout_height="match_parent"  
    android:orientation="vertical" >  
    
    <LinearLayout
       android:layout_width="fill_parent"  
       android:layout_height="wrap_content"
       android:layout_marginTop="7dp"
       android:layout_marginLeft="13dp"
       android:layout_marginRight="13dp"
       android:orientation="vertical"
       android:background="@drawable/feed_header_layout"
       >
       
       <RelativeLayout
           android:layout_width="fill_parent"  
           android:layout_height="wrap_content"
           android:paddingBottom="3dp"
           >
             <ImageView
               android:layout_width="40dp"  
               android:layout_height="40dp"
               android:layout_marginLeft="6dp"
               android:id="@+id/feed_avatar"
               android:layout_marginTop="10dp"
               android:layout_alignParentLeft="true"
             />
           <LinearLayout
               android:layout_width="wrap_content"  
               android:layout_height="match_parent"
               android:layout_marginLeft="4dp"
               android:layout_toRightOf="@id/feed_avatar"
               android:id="@+id/feed_header_wrap1"
               >
             <TextView
               android:layout_width="wrap_content"  
               android:layout_height="wrap_content"
               android:textColor="#FF70BBA8"
               android:textStyle="bold"
               android:layout_marginTop="18dp"
               android:textSize="14sp"
               android:id="@+id/feed_username"
             />
           
             <TextView
               android:layout_width="wrap_content"  
               android:layout_height="wrap_content"
               android:textColor="@color/subhead"
               android:textSize="14sp"
               android:layout_marginLeft="4dp"
               android:id="@+id/feed_des"
               android:layout_marginTop="18dp"
               android:layout_toRightOf="@id/feed_username"
             />
           
             <TextView
               android:layout_width="wrap_content"  
               android:layout_height="wrap_content"
               android:textColor="@color/subhead"
               android:textSize="14sp"
               android:layout_marginLeft="4dp"
               android:id="@+id/feed_store_name"
               android:layout_marginTop="18dp"
               android:layout_toRightOf="@id/feed_des"
               android:visibility="gone"
             />
           
             <ImageView
               android:layout_width="wrap_content"  
               android:layout_height="wrap_content"
               android:src="@drawable/ic_class_diamond_feed"
               android:layout_alignParentRight="true"
               android:layout_marginTop="8dp"
               android:layout_marginRight="10dp"
               android:id="@+id/feed_level_image"
               android:visibility="gone"
             />
           
             <TextView
               android:layout_width="wrap_content"  
               android:layout_height="wrap_content"
               android:textSize="8sp"
               android:layout_alignParentRight="true"
               android:layout_marginRight="10dp"
               android:id="@+id/feed_level_name"
               android:layout_below="@id/feed_level_image"
               android:visibility="gone"
             />
           </LinearLayout>
           <LinearLayout
               android:layout_width="wrap_content"  
               android:layout_height="wrap_content"
               android:id="@+id/feed_header_wrap2"
               android:layout_marginLeft="4dp"
               android:layout_marginTop="8dp"
               android:layout_toRightOf="@id/feed_avatar"
               android:orientation="horizontal"
               >
              <TextView
               android:layout_width="wrap_content"  
               android:layout_height="wrap_content"
               android:textColor="#FF70BBA8"
               android:textStyle="bold"
               android:textSize="14sp"
               android:id="@+id/feed_username2"
             />
           
             <TextView
               android:layout_width="wrap_content"  
               android:layout_height="wrap_content"
               android:textColor="@color/subhead"
               android:textSize="14sp"
               android:layout_marginLeft="4dp"
               android:id="@+id/feed_des2"
             />
           </LinearLayout>
           
           <LinearLayout
               android:layout_width="wrap_content"  
               android:layout_height="wrap_content"
               android:layout_marginLeft="4dp"
               android:id="@+id/feed_header_wrap3"
               android:layout_toRightOf="@id/feed_avatar"
               android:orientation="horizontal"
               android:layout_below="@id/feed_header_wrap2"
               >
             <TextView
               android:layout_width="wrap_content"  
               android:layout_height="wrap_content"
               android:textColor="@color/subhead"
               android:textSize="14sp"
               
               android:id="@+id/feed_store_name2"
             />
           </LinearLayout>
       </RelativeLayout>
       <View
           android:layout_width="fill_parent"
           android:layout_height="1px"
           android:background="@color/green"
           />
       <RelativeLayout
           android:layout_width="fill_parent"  
           android:layout_height="wrap_content"
           android:paddingBottom="3dp"
           android:id="@+id/feed_icons_wrap"
           android:layout_marginBottom="5dp"
        >
           <ImageView
               android:layout_width="32dp"  
               android:layout_height="32dp"
               android:layout_alignParentLeft="true"
               android:layout_marginTop="8dp"
               android:layout_marginLeft="10dp"
               android:id="@+id/feed_image1"
               />
           
           <ImageView
               android:layout_width="32dp"  
               android:layout_height="32dp"
               android:src="@drawable/ic_stiqer_feed"
               android:layout_marginTop="8dp"
               android:layout_marginLeft="10dp"
               android:id="@+id/feed_stiqer_icon"
               android:layout_toRightOf="@id/feed_image1"
               android:visibility="gone"
               />
           
          <TextView
               android:layout_width="wrap_content"  
               android:layout_height="wrap_content"
               android:id="@+id/feed_stiqer_num"
               android:layout_marginLeft="-18dp"
               android:textColor="#FF6FBEA9"
               android:textSize="10sp"
               android:layout_toRightOf="@id/feed_stiqer_icon"
               android:layout_below="@id/feed_stiqer_icon"
              />
           
           <ImageView
               android:layout_width="32dp"  
               android:layout_height="32dp"
               android:src="@drawable/ic_egg_feed"
               android:layout_marginTop="8dp"
               android:layout_marginLeft="10dp"
               android:id="@+id/feed_egg_icon"
               android:layout_toRightOf="@id/feed_stiqer_icon"
               android:visibility="gone"
               />
           
           <TextView
               android:layout_width="wrap_content"  
               android:layout_height="wrap_content"
               android:id="@+id/feed_egg_num"
               android:layout_marginLeft="-20dp"
               android:textColor="#FF6FBEA9"
               android:textSize="10sp"
               android:layout_toRightOf="@id/feed_egg_icon"
               android:layout_below="@id/feed_egg_icon"
              />
           
           <ImageView
               android:layout_width="32dp"  
               android:layout_height="32dp"
               android:src="@drawable/comment_btn_press"
               android:layout_marginTop="8dp"
               android:layout_marginRight="10dp"
               android:layout_alignParentRight="true"
               android:id="@+id/feed_comment_btn"
               />
           
           <TextView
               android:layout_width="wrap_content"  
               android:layout_height="wrap_content"
               android:id="@+id/feed_comment_num"
               android:textSize="10sp"
               android:layout_marginRight="9dp"
               android:paddingLeft="14dp"
               android:paddingRight="14dp"
               android:layout_marginTop="3dp"
               android:textColor="@color/white"
               android:background="#FF68C7BE"
               android:layout_below="@id/feed_comment_btn"
               android:layout_alignParentRight="true"
              />
           
           <ImageView
               android:layout_width="32dp"  
               android:layout_height="32dp"
               android:src="@drawable/like_btn_press"
               android:layout_marginTop="8dp"
               android:layout_marginRight="10dp"
               android:id="@+id/feed_like_btn"
               android:layout_toLeftOf="@id/feed_comment_btn"
               />
           <TextView
               android:layout_width="wrap_content"  
               android:layout_height="wrap_content"
               android:textColor="@color/white"
               android:background="#FF68C7BE"
               android:textSize="10sp"
               android:layout_marginRight="9dp"
               android:layout_marginTop="3dp"
               android:paddingLeft="14dp"
               android:paddingRight="14dp"
               android:id="@+id/feed_like_num"
               android:layout_toLeftOf="@id/feed_comment_btn"
               android:layout_below="@id/feed_like_btn"
              />
        </RelativeLayout>

        <ImageView
             android:layout_width="220dp"  
             android:layout_height="220dp"
             android:layout_marginTop="2dp"
             android:layout_gravity="center"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             android:id="@+id/feed_image2"
             android:visibility="gone"
          />
        
       <LinearLayout
           android:layout_width="match_parent"  
           android:layout_height="150dp"
           android:layout_marginTop="2dp"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:id="@+id/image_two_wrap"
           android:orientation="horizontal"
           android:visibility="gone"
          >
           
           <ImageView
               android:layout_width="150dp"  
               android:layout_height="150dp"
               android:layout_weight="1"
               android:id="@+id/feed_image3"
               />
           
           <ImageView
               android:layout_width="150dp"  
               android:layout_height="150dp"
               android:layout_weight="1"
               android:id="@+id/feed_image4"
               />
       </LinearLayout>   
       
        <TextView
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"
            android:id="@+id/feed_msg"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/subhead"
            android:visibility="gone"
            />
       
        <TextView
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"
            android:id="@+id/feed_at_users"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/subhead"   
            android:visibility="gone"
         />
         
       <LinearLayout  
         android:layout_width="fill_parent"  
         android:layout_height="wrap_content"  
         android:gravity="right" >
          <TextView
             android:layout_width="wrap_content"  
             android:layout_height="wrap_content"
             android:layout_marginRight="8dp"
             android:textSize="13sp"
             android:textColor="@color/grey"
             android:layout_marginTop="8dp"
             android:id="@+id/feed_created_time"
           />
       </LinearLayout>  
    </LinearLayout>
    <ImageView
       android:layout_width="wrap_content"  
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:src="@drawable/feed_bottom"
       android:layout_marginLeft="12dp"
       android:layout_marginRight="12dp"
       android:layout_marginBottom="7dp"
       android:layout_marginTop="-1dp"
    />
</LinearLayout>  