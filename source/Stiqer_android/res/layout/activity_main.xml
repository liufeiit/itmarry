<?xml version="1.0" encoding="UTF-8"?>  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="match_parent"  
    android:layout_height="match_parent" 
    android:id="@+id/activity_main"
 >  
     <RelativeLayout  
        android:id="@+id/header"  
        android:layout_width="match_parent"  
        android:layout_height="49dp"
        android:background="@color/white"  
        android:gravity="center_vertical" >  
  
        <Button  
            android:id="@+id/btn_drawer"  
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/icon_menu"
         />      
        <TextView
            android:id="@+id/drawer_title"  
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"  
            android:gravity="center"  
            android:textColor="@color/green"
            android:padding="3dp"
            android:textSize="26sp"
          /> 
          
          <Button  
            android:id="@+id/btn_scan"  
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginRight="10dp"
            android:padding="3dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/icon_scan"
             />      
             
          <Button  
            android:id="@+id/btn_addfriend"  
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginRight="15dp"
            android:padding="2dp"
            android:visibility="invisible"
            android:layout_toLeftOf="@id/btn_scan"
            android:background="@drawable/icon_add_grey"
           />
          
         <RelativeLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginRight="20dp"
              android:layout_marginTop="8dp"
              android:layout_toLeftOf="@id/btn_scan"
              android:orientation="horizontal"
              android:id="@+id/nav_noti"
              android:visibility="gone"
             >
           
           <ImageView
              android:layout_width="36dp"
              android:layout_height="36dp"
              android:src="@drawable/home_top_noti" 
           />
           
           <TextView
               android:layout_width="16dp"
               android:layout_height="16dp"
               android:gravity="center"
               android:background="@drawable/top_noti_num"
               android:textColor="@color/black"
               android:textSize="8sp"
               android:layout_marginLeft="35dp"
               android:id="@+id/main_noti_num"
             />
           </RelativeLayout>
    </RelativeLayout> 
    
     <View
        android:layout_width="fill_parent"  
        android:layout_height="1dp"
        android:background="@drawable/top_bar_line"
        android:layout_below="@id/header" 
        android:id="@+id/header_line"
     /> 
   <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
       android:id="@+id/drawer_layout"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_below="@id/header_line"
    >
   
      <FrameLayout
         android:id="@+id/content_frame"
         android:layout_width="match_parent"
         android:layout_height="match_parent" />
 
     <LinearLayout
         android:id="@+id/left_drawer"
         android:layout_width="320dp"
         android:layout_height="match_parent"
         android:layout_gravity="start"
         android:orientation="vertical"
         android:background="@color/white"
         >
          <!--  
          <EditText
              style="@style/DrawerMenuItem"
              android:background="@drawable/bg_search_slidebar"
              android:layout_marginBottom="5dp"
              android:layout_marginTop="5dp"
              />
          -->
          <Button
              style="@style/DrawerMenuItem"
              android:id="@+id/nav_feed"
              android:layout_marginTop="10dp"
              android:background="@drawable/btn_drawer_feed_press"
            />
          
          <Button
            style="@style/DrawerMenuItem"
            android:background="@drawable/btn_drawer_profile_press"
            android:id="@+id/nav_profile"
            />
          <Button
              style="@style/DrawerMenuItem"
              android:id="@+id/nav_friend"
              android:background="@drawable/btn_drawer_friend_press"
              />
          <Button
              style="@style/DrawerMenuItem"
              android:id="@+id/nav_prom"
              android:background="@drawable/btn_drawer_prom_press"
              android:visibility="gone"
              />
          <Button
              style="@style/DrawerMenuItem"
              android:id="@+id/nav_store"
              android:background="@drawable/btn_drawer_store_press"
              />
          <Button
              style="@style/DrawerMenuItem"
              android:id="@+id/nav_fav"
              android:background="@drawable/btn_drawer_fav_press"
              android:visibility="gone"
              />
          <Button
              style="@style/DrawerMenuItem"
              android:id="@+id/nav_set"
              android:background="@drawable/btn_drawer_setting_press"
              />
         
      </LinearLayout>
   </android.support.v4.widget.DrawerLayout>
</RelativeLayout>
