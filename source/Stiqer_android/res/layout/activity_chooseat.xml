<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_feed"
    android:orientation="vertical"
    >
    <RelativeLayout  
       android:layout_width="match_parent"  
       android:layout_height="49dp"
       android:background="@color/white"  
       android:gravity="center_vertical" >  

       <Button  
          android:id="@+id/sd_back_btn"  
          android:layout_width="55dp"
            android:layout_height="41dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp"
          android:background="@drawable/camera_back_btn"
        />
 
        <Button  
            android:id="@+id/btn_queding"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            android:text="Done"
          />
     </RelativeLayout>
     <View
        android:layout_width="fill_parent"  
        android:layout_height="1dp"
        android:background="@drawable/top_bar_line"
     />
     
   <RelativeLayout 
      android:layout_width="match_parent"
      android:layout_height="match_parent" 
    >
    
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/at_friend_progressbar"
        android:visibility="gone"
        />
    <TextView 
        android:id="@+id/at_alphabetButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:textSize="14sp"
        android:paddingLeft="8dp"
        android:paddingRight="2dp"
        android:lineSpacingExtra="3dp"
        android:textColor="#FF9B9C9E"
        android:background="@color/white"
        />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/at_alphabetButton"
        android:background="#FF8C9493"
        android:id="@+id/divider_line"
        />

    <ListView
        android:id="@+id/at_contacts_list_view"
        android:layout_toLeftOf="@id/divider_line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:dividerHeight="1dp"
        android:divider="#FF87C0B3"
        android:scrollbars="none"
        android:fadingEdge="none" >
    </ListView>

    <LinearLayout
        android:id="@+id/at_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="18dip"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:background="#FF87C0B3" >

        <TextView
            android:id="@+id/at_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dip"
            
            android:textColor="#ffffff"
            android:textSize="13sp" />
    </LinearLayout>
    
  
    <RelativeLayout 
        android:id="@+id/at_section_toast_layout"
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:layout_centerInParent="true"
        android:background="@drawable/section_toast"
        android:visibility="gone"
        >
        
        <TextView
            android:id="@+id/at_section_toast_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#fff"
            android:textSize="30sp"
            />
    </RelativeLayout>
</RelativeLayout>
</LinearLayout>