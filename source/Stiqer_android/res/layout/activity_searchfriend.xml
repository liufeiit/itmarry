<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:background="@color/bg_feed"
     android:orientation="vertical"
    >
    
    <RelativeLayout  
       android:layout_width="match_parent"  
       android:layout_height="49dp"
       android:background="@color/white"  
       android:gravity="center_vertical" >  

       <Button  
          android:id="@+id/sf_back_btn"  
          android:layout_width="55dp"
            android:layout_height="41dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp"
          android:background="@drawable/camera_back_btn"
        />

     </RelativeLayout>
     <View
        android:layout_width="fill_parent"  
        android:layout_height="1dp"
        android:background="@drawable/top_bar_line"
     />
     
     <RelativeLayout
         android:layout_width="match_parent"  
         android:layout_height="wrap_content"
         android:layout_marginTop="10dp"
         >
        <EditText
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"
            android:background="@drawable/search_bar"
            android:id="@+id/sf_text"
            android:layout_marginLeft="14dp"
            android:paddingLeft="10dp"
            android:hint="type in username"
          />
        <ImageView
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"
            android:src="@drawable/search_btn"
            android:layout_marginRight="14dp"
            android:layout_marginTop="4dp"
            android:layout_alignParentRight="true"
            android:id="@+id/sf_search_btn"
            />
     </RelativeLayout>  
     
     <View
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:background="#FF87C0B3"
         android:layout_marginTop="15dp"
         />
     
     <ListView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/searchfriend_listview"
          android:dividerHeight="1dp"
          android:divider="#FF87C0B3"
          android:scrollbars="none"
          android:fadingEdge="none"
     />

</LinearLayout>