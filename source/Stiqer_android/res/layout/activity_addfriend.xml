<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:background="@color/bg_feed"
     android:orientation="vertical"
    >
    
    <RelativeLayout  
       android:layout_width="match_parent"  
       android:layout_height="49dp"
       android:background="@color/white"  
       android:gravity="center_vertical" >  

       <Button  
          android:id="@+id/af_back_btn"  
          android:layout_width="55dp"
          android:layout_height="41dp"
          android:layout_marginLeft="8dp"
          android:layout_marginTop="3dp"
          android:layout_marginBottom="5dp"
          android:background="@drawable/camera_back_btn"
        />
        <TextView  
            android:id="@+id/af_head_title"  
            android:layout_width="wrap_content"  
            android:layout_height="match_parent"
            android:layout_centerInParent="true"  
            android:gravity="center"  
            android:textColor="@color/green"
            android:textSize="26sp"
             /> 

     </RelativeLayout>
     <View
        android:layout_width="fill_parent"  
        android:layout_height="7dp"
        android:background="@color/top_bar_line"
     />

  <RelativeLayout 
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     >
     
     <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/af_progressbar"
        />
    
    <TextView
        android:id="@+id/af_alphabetButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:textSize="14sp"
        android:paddingLeft="8dp"
        android:paddingRight="2dp"
        android:lineSpacingExtra="3dp"
        android:textColor="#FF9B9C9E"
        android:background="@color/white"
        />
      <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/af_alphabetButton"
        android:background="#FF8C9493"
        android:id="@+id/divider_line"
        />
     <ListView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:layout_toLeftOf="@id/divider_line"
          android:id="@+id/addfriend_listview"
          android:dividerHeight="1dp"
          android:divider="#FF87C0B3"
          android:scrollbars="none"
          android:fadingEdge="none"
          android:visibility="gone"
     />
      
     <LinearLayout
        android:id="@+id/af_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="18dip"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:background="#FF87C0B3" >
        
        <TextView
            android:id="@+id/af_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dip"
            android:textColor="#ffffff"
            android:textSize="13sp" />
    </LinearLayout>
    

    <RelativeLayout 
        android:id="@+id/af_section_toast_layout"
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:layout_centerInParent="true"
        android:background="@drawable/section_toast"
        android:visibility="gone"
        >
        <TextView 
            android:id="@+id/af_section_toast_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#fff"
            android:textSize="30sp"
            />
    </RelativeLayout>
 </RelativeLayout>
</LinearLayout>