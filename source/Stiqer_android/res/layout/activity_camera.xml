<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_feed"
    android:orientation="vertical"
     >
    <RelativeLayout  
        android:id="@+id/header"  
        android:layout_width="match_parent"  
        android:layout_height="49dp"
        android:background="@color/white"  
        android:gravity="center_vertical" >  
  
        <Button  
            android:id="@+id/camera_back_btn"  
            android:layout_width="55dp"
            android:layout_height="41dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/camera_back_btn"
         />  
    </RelativeLayout>
    
    <View
        android:layout_width="fill_parent"  
        android:layout_height="1dp"
        android:background="@drawable/top_bar_line"
     />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
       > 
        <ImageView
           android:layout_width="83dp"
           android:layout_height="83dp"
           android:id="@+id/c_avatar"
        />
        
        <EditText
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:hint="say something.."
           android:paddingLeft="10dp"
           android:background="@drawable/camera_text_bg"
           android:minLines="3"
           android:gravity="top"
           android:layout_marginLeft="10dp"
           android:id="@+id/checkin_msg"
        />
    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/camera_line1"
    />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/image_wrap"
        android:background="@drawable/white_corner"
        android:layout_margin="10dp"
        android:padding="8dp"
        >
        
       <GridView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:numColumns="4"
           android:verticalSpacing="15dp"
           android:horizontalSpacing="10dp"
           android:id="@+id/camera_gridview"
           />
       
    </LinearLayout>   
     
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/camera_line1"
       />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/white_corner"
        android:layout_margin="10dp"
        android:id="@+id/camera_at"
        android:padding="8dp"
        >
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/camera_at"
           />
        
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Tag your friends"
           android:textSize="18sp"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="5dp"
           android:background="@color/white"
           android:id="@+id/at_names"
           />
        
    </LinearLayout>
    <Button
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Done"
         android:background="@drawable/camera_btn"
         android:layout_gravity="center"
         android:id="@+id/btn_post"
        />
</LinearLayout>
