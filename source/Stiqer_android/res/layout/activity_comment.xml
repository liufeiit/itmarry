<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_feed"
    android:id="@+id/activity_comment"
    android:gravity="center"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/header"  
        android:layout_width="match_parent"  
        android:layout_height="49dp"
        android:background="@color/white"  
        android:gravity="center_vertical" >  
  
        <Button  
            android:id="@+id/comment_back_btn"  
            android:layout_width="55dp"
            android:layout_height="41dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/camera_back_btn"
         />
    </RelativeLayout>
    
    <View
        android:layout_width="fill_parent"  
        android:layout_height="1dp"
        android:background="@drawable/top_bar_line"
        android:id="@+id/wrap_line"
        android:layout_below="@id/header"
     />
    <LinearLayout
        android:layout_width="fill_parent"  
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/wrap_line"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:id="@+id/like_wrap"
        android:visibility="gone"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/like_1"
        android:visibility="gone"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/like_2"
        android:visibility="gone"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text=" and "
        android:id="@+id/like_3"
        android:visibility="gone"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:textColor="@color/black"
        android:text="2 others"
        android:textStyle="bold"
        android:id="@+id/like_4"
        android:visibility="gone"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:textColor="@color/black"
        android:text=" liked your post"
        android:id="@+id/like_5"
        android:visibility="gone"
        />
    </LinearLayout>
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/comment_progressbar"
        android:layout_below="@id/wrap_line"
        />
    
    <LinearLayout
       android:layout_width="fill_parent"  
       android:layout_height="wrap_content"
       android:orientation = "horizontal" 
       android:layout_alignParentBottom="true"
       android:focusable="true"  
       android:padding="5dp"
       android:focusableInTouchMode="true"
       android:background="@drawable/comment_post_wrap"
       android:id="@+id/comment_post_wrap"
     >
      <EditText
          android:layout_width="290dp"  
          android:layout_height="wrap_content"
          android:id="@+id/comment_txt"
          android:hint = "Write a comment..."
          android:maxLines="1" 
          android:background="@drawable/comment_post_text"
          android:paddingLeft="5dp"
       />
      <Button
          android:layout_width="wrap_content"  
          android:layout_height="wrap_content"
          android:id="@+id/comment_btn"
          android:background="@drawable/comment_post_btn"
          android:layout_marginLeft="5dp"
          />
    </LinearLayout>
    
    <ListView
         android:layout_width="fill_parent"  
         android:layout_height="wrap_content"
         android:layout_marginTop="8dp"
         android:id="@+id/comment_listview"
         android:isScrollContainer="true"
         android:layout_below="@id/like_wrap"
         android:layout_above="@id/comment_post_wrap"
         android:dividerHeight="15dp"
    /> 
    
</RelativeLayout>