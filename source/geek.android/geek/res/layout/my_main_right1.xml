<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    style="@style/main_background">

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:gravity="center">
	    <ImageView 
	        android:id="@+id/main_right_menu_avatar"
	        android:layout_width="80dp"
	        android:layout_height="80dp"
	        android:src="@drawable/ic_avatar"
	        android:layout_marginTop="20dp"
	        android:background="@drawable/border_radius" />
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dp"
	         android:layout_marginBottom="20dp"
	        android:text="@string/txt_city_switch"
	        android:textSize="24sp"
	        android:textStyle="bold"
	        android:textColor="@android:color/darker_gray"/>
	</LinearLayout>
	
	<ListView 
	    android:id="@+id/list"
	    android:layout_width="match_parent"
	    android:layout_height="280dp"
	    android:padding="2dp"
	    android:fadingEdge="none" 
	    android:transcriptMode="disabled" 
	    android:cacheColorHint="@null" 
	    android:divider="@drawable/ic_line"/>
	<RelativeLayout
        android:id="@+id/main_right_setting"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        style="@style/main_background"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/main_right_menu_setting"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_drawer_setting_normal" />

        <TextView
            android:id="@+id/main_right_menu_version"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            android:text="@string/version"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp"
            android:textStyle="bold" />
   
    </RelativeLayout>	
</LinearLayout>
