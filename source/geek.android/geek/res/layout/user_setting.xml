<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D1D7DC">
    <!-- padding 内边距   layout_margin 外边距
  		android:layout_alignParentTop 布局的位置是否处于顶部 -->

    <RelativeLayout
        android:id="@+id/login_header"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="#1abc9c"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/login_back"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="8dip"
            android:background="#00000000"
            android:src="@drawable/btn_back_normal" />

        <View
            android:id="@+id/login_view_01"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/login_back"
            android:background="#0EBB99" />

        <View
            android:id="@+id/login_view_02"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/login_view_01"
            android:background="#01AA89" />

        <TextView
            android:id="@+id/login_header_title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:text="极客头条"
            android:textColor="#ffffff"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/login_next"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/login_header_title"
            android:gravity="center"
            android:text="下一步"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </RelativeLayout>
	
  	<RelativeLayout 
  	    android:id="@+id/login_div"
  	    android:layout_width="fill_parent"
  		android:layout_height="wrap_content" 
	  	android:layout_margin="10dip"
	  	android:background="#ffffff"
	  	android:layout_below="@id/login_header" >

        <RelativeLayout
            android:id="@+id/setting_group_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_border"
            android:padding="5dp" >

            <ImageView 
                android:id="@+id/setting_profile_ic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_mark_hot" />
            <TextView 
		  		android:id="@+id/login_logo"
		  		android:layout_width="wrap_content"
		  		android:layout_height="wrap_content"
		  		android:layout_toRightOf="@id/setting_profile_ic"
		  		android:layout_marginLeft="10dp"
		  		android:gravity="center"
            	android:layout_centerVertical="true"
		  		android:textSize="18sp"
		  		android:text="设置"/>
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="30dp"
            	android:layout_marginRight="10dp"
            	android:layout_alignParentRight="true"
            	android:layout_centerVertical="true"
                android:src="@drawable/ic_drawer_item_arrow_normal" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/setting_group_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_below="@id/setting_group_1"
            android:background="@drawable/bottom_border" >

            <ImageView 
                android:id="@+id/setting_profile_ic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_mark_hot" />
            <TextView 
		  		android:id="@+id/login_logo"
		  		android:layout_width="wrap_content"
		  		android:layout_height="wrap_content"
		  		android:layout_toRightOf="@id/setting_profile_ic"
		  		android:layout_marginLeft="10dp"
		  		android:gravity="center"
            	android:layout_centerVertical="true"
		  		android:textSize="18sp"
		  		android:text="设置"/>
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="30dp"
            	android:layout_marginRight="10dp"
            	android:layout_alignParentRight="true"
            	android:layout_centerVertical="true"
                android:src="@drawable/ic_drawer_item_arrow_normal" />
        </RelativeLayout>
	  	<RelativeLayout
           android:id="@+id/setting_group_3"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="5dp"
           android:layout_below="@id/setting_group_2"
           android:background="@drawable/bottom_border" >

           <ImageView 
               android:id="@+id/setting_update_ic"
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:src="@drawable/ic_mark_hot" />
           <TextView 
		  		android:id="@+id/setting_update"
		  		android:layout_width="wrap_content"
		  		android:layout_height="wrap_content"
		  		android:layout_toRightOf="@id/setting_update_ic"
		  		android:layout_marginLeft="10dp"
		  		android:gravity="center"
	           	android:layout_centerVertical="true"
		  		android:textSize="18sp"
		  		android:text="设置"/>
           <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="30dp"
	           	android:layout_marginRight="10dp"
	           	android:layout_alignParentRight="true"
	           	android:layout_centerVertical="true"
                android:src="@drawable/ic_drawer_item_arrow_normal" />
       </RelativeLayout>
  	</RelativeLayout>
  	
	  	
  
</LinearLayout>

