<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignBottom="@+id/linear"
        android:layout_alignLeft="@+id/linear"
        android:layout_alignRight="@+id/linear"
        android:layout_alignTop="@+id/linear"
        android:scaleType="fitXY"
        android:src="@drawable/title_bg" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:minHeight="50dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingBottom="9dp" >

        <ImageView
            android:id="@+id/popup_star"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/star" />

        <TextView
            android:id="@+id/popup_title"
            android:layout_width="90dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:text="title"
            android:textColor="@android:color/white"
            android:textSize="15dp" />

        <ImageView
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/cutline" />

        <ImageView
            android:id="@+id/popup_msg"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="3dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/msg_bg"
            android:scaleType="fitCenter"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/icon_msg" />
    </LinearLayout>

</RelativeLayout>