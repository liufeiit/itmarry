<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_actionbar"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:background="@color/green" >

    <TextView
        android:id="@+id/left_btn"
        android:layout_width="50dp"
        android:layout_height="fill_parent"
        android:background="@drawable/msg_bg"
        android:clickable="true"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/left_btn"
        android:background="@drawable/cutline" />

    <TextView
        android:id="@+id/right_btn"
        android:layout_width="50dp"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/msg_bg"
        android:clickable="true"
        android:gravity="center"
        android:textColor="@color/actiontext_color"
        android:textSize="20dp"
        android:textStyle="bold" />

    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@id/right_btn"
        android:background="@drawable/cutline" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="@color/actiontext_color"
        android:textSize="30dp"
        android:textStyle="bold" />

</RelativeLayout>